
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx", // Keep for client-side TSX awareness
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Not strictly used by Wrangler for worker.ts directly but good practice
    "types": [
      "@cloudflare/workers-types",
      "node" // For process.env in worker context if needed (though secrets are preferred)
    ],
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/react"], // Adjust if your client-side files are structured differently
      "react-dom/*": ["./node_modules/react-dom/*"],
      "@google/genai": ["./node_modules/@google/genai"]
    }
  },
  "include": [
    "worker/**/*.ts", // For the worker
    "public/**/*.ts",  // For client-side .ts files (if any)
    "public/**/*.tsx"  // For client-side .tsx files
  ],
  "exclude": ["node_modules", "dist"]
}
